    "react": "18.2.0",
    "react-dom": "18.2.0",
    "size-limit": "11.1.6",
    "styled-components": "6.1.13",
    "ts-jest-resolver": "2.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
