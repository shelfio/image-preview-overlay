{
  "name": "@shelf/image-preview-overlay",
  "version": "1.3.0",
  "description": "Plain wrapper that renders full image preview on child image tag click",
  "keywords": [
    "image",
    "preview",
    "fullscreen",
    "react"
  ],
  "license": "MIT",
  "author": {
    "name": "Dmytro Bondarenko",
